import { Injectable } from '@angular/core';

@Injectable({
  providedIn: 'root'
})
export class ProductsService {

  constructor() {
  }

  products = [
	{% for item in items %}
    {
      "id": "{{ item.id }}",
      "name": "{{ item.name }}",
      "price": {{ "%.2f" | format( item.price ) }},
      "description": "{{ item.description }}",
      "squareup_url": "{{ item.squareup_url }}",
      "image": "{{ images_dir }}{{ item.file_name }}.jpg",
      "image_gallery": [
      	"{{ images_dir }}{{ item.file_name }}.jpg",
		{% for crop in item.crops %}
      	"{{ images_dir }}{{ item.file_name }}.{{ crop }}.jpg",
		{% endfor %}
      ],
    },
	{% endfor %}
  ];

  getProducts(){
    return this.products;
  }

  getProduct(id) {
    for (let product of this.products) {
      if (id.toString() == product.id.toString()) {
        return product;
      }
    }
    return null;
  }
}
