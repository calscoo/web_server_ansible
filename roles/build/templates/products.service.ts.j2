import { Injectable } from '@angular/core';

@Injectable({
  providedIn: 'root'
})
export class ProductsService {

  constructor() {
  }

  products = [
	{% for item in items %}
    {
      "id": "{{ loop.index }}",
      "name": "{{ item.name }}",
      "description": "{{ item.description }}",
      "squareup_url": "{{ item.squareup_url }}",
      "image": "{{ images_dir }}{{ item.name }}.jpg",
      "image_gallery": [
      	"{{ images_dir }}{{ item.name }}.jpg",
      	"{{ images_dir }}{{ item.name }}.{{ range(3, 6) | random }}.jpg",
      	"{{ images_dir }}{{ item.name }}.{{ range(0, 3) | random }}.jpg",
      	"{{ images_dir }}{{ item.name }}.{{ range(6, 9) | random }}.jpg",
      ],
      "variations": [
        {% for variation in item.variations %}
        {
          "size": "{{ variation.size }}",
          "type": "{{ variation.type }}",
          "price": {{ "%.2f" | format( variation.price ) }},
        },
        {% endfor %}
      ],
    },
	{% endfor %}
  ];

  getProducts(){
    return this.products;
  }

  getProduct(id) {
    for (let product of this.products) {
      if (id.toString() == product.id.toString()) {
        return product;
      }
    }
    return null;
  }
}
